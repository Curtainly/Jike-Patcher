<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/chat_message_corner_radius" />
            <solid android:color="@color/jike_background_gray" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/chat_message_corner_radius" />
            <solid android:color="@color/jike_background_white" />
            <stroke android:width="0.5dip" android:color="@color/jike_divider_gray" />
        </shape>
    </item>
</selector>